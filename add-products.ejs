<html>
    <head>
        <%- include('__bootstrap.ejs') %>
    </head>
    <body>
        <%- include('_header.ejs') %>
        <div class="container mt-4">
            <form action="/product/add-product" method="post">
                <div class="form-group">
                    <input name="title" type="text" placeholder="Enter product name" class="form-control" required />
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Enter product description" class="form-control" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <input name="price" type="text" placeholder="Enter product price" class="form-control" required />
                </div>
                <div class="form-group">
                    <input name="categoryId" type="text" placeholder="Enter category ID" class="form-control" required />
                </div>
                <div class="form-group">
                    <input name="imageUrl" type="text" placeholder="Enter product image URL" class="form-control" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-success">ADD</button>
                </div>
            </form>
        </div>
    </body>
</html>
