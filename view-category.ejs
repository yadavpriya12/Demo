<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category List</title>
    <%- include('__bootstrap.ejs') %>
</head>
<body>
    <%- include('_header.ejs') %>

<div class="container mt-4">
    <h1 class="text-center mb-4">Category List</h1>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th> 
                <th>Actions</th> <!-- Added a column for buttons -->
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < categories.length; i++) { %>
                <tr>
                    <td><%= categories[i].id %></td>
                    <td><%= categories[i].name %></td>
                    <td>
                        <div class="text-center">
                            <a onclick="return confirm('Do you want to delete?')" href="/category/delete-category/<%= categories[i].id %>">
                                <button class="btn btn-outline-danger" style="width:100px;">Delete</button>
                            </a>  
                            <a href="/category/edit-category/<%= categories[i].id %>">
                                <button class="btn btn-primary" style="width:100px;">Edit</button>
                            </a>  
                        </div>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

</body>
</html>
